<% include ../components/header %>
	<div class="container">
		<div class="row text-center">
			<div class="col-md-4 col-md-offset-4">
				<h1 class="text-center">Edit Poll</h1>
				<hr>
				<form class="form-horizontal app-form">
					<div class="form-group">
						<label class="col-sm-2 control-label">Title:</label>
						<div class="col-sm-10">
							<p class="form-control-static text-center"><%= poll.title %></p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Options:</label>
						<div class="col-sm-10">
							<p class="form-control-static">
                <%poll.options.forEach(option => { %> <%= option.description %>; <%}); %>
              </p>
						</div>
					</div>
				</form>
				<form action="/polls/<%= poll._id %>?_method=PUT" class="app-form" method="post">
					<div class="form-group">
						<input class="form-control input-field" id="options" name="poll[options][]" placeholder="Extra Option" required="" type="text">
						<div class="text-center">
							<p>&nbsp;</p>
              <button class="btn btn-sm btn-default" id="more-options" type="button"><i aria-hidden="true" class="fa fa-plus-circle"></i> Add option</button>
							<p>&nbsp;</p>
						</div>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-default btn-block" type="submit"><i aria-hidden="true" class="fa fa-plus-square"></i> Update</button>
					</div>
				</form>
			</div>
		</div>
	</div>
<%- include('../components/footer', { script: 'poll-extra-options' }) %>