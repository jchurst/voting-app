<% include ../components/header %>
<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<h1 class="text-center">Register</h1>
				<hr>
				<a class="btn btn-lg btn-info btn-block" href="/auth/twitter"><i aria-hidden="true" class="fa fa-twitter"></i> Sign up with Twitter</a> <a class="btn btn-lg btn-default btn-block" href="/auth/github"><i aria-hidden="true" class="fa fa-github"></i> Sign up with GitHub</a>
				<hr>
				<form action="/auth/register" class="app-form" method="post">
					<div class="form-group">
						<label for="username">Username</label> <input class="form-control input-field" id="username" name="username" placeholder="Username" required="" type="text">
					</div>
					<div class="form-group">
						<label for="password">Password</label> <input class="form-control input-field" id="password" name="password" placeholder="Password" required="" type="password">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-default btn-block" type="submit"><i aria-hidden="true" class="fa fa-sign-in"></i> Sign Up</button>
					</div>
				</form>
			</div>
		</div>
</div>
<%include ../components/footer %>